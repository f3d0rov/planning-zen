{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build app TS",
			"group": "build",

			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			]
		},

		{
			"label": "Build test TS",
			"group": "build",

			"type": "typescript",
			"tsconfig": "tests-tsconfig.json",
			"problemMatcher": [
				"$tsc"
			]
		},

		{
			"label": "Pack app",
			"group": "build",

			"type": "shell",
			"command": "npx webpack",

			"options": {
				"cwd": "${workspaceFolder}/web/"
			}
		},

		{
			"label": "Pack tests",
			"group": "build",

			"type": "shell",
			"command": "npx webpack",

			"options": {
				"cwd": "${workspaceFolder}/tests/"
			}
		},

		{
			"label": "Open testing page",
			"group": "test",
			
			"type": "shell",
			"command": "mocha.html",

			"options": {
				"cwd": "${workspaceFolder}/tests/"
			}
		},

		{
			"label": "Run karma",
			"group": "test",

			"type": "shell",
			"command": "karma start ./karma.conf.js --single-run"
		},

		{
			"label": "Run tests",
			"group": "test",

			"dependsOn": [
				"Build test TS",
				"Pack tests",
				"Run karma"
			],
			
			"dependsOrder": "sequence"
		},

		{
			"label": "Build TS",
			"group": "build",

			"dependsOn": [
				"Build app TS",
				"Build test TS",
			],
			"dependsOrder": "sequence"
		},
		
		{
			"label": "Build app",
			"group": "build",

			"dependsOn": [
				"Build TS",
				"Pack app"
			],
			"dependsOrder": "sequence"
		},

		{
			"label": "Build app & test",
			"group": "build",

			"dependsOn": [
				"Build app",
				"Run tests"
			],
			"dependsOrder": "parallel"
		}
	]
}
