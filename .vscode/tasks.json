{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build TS",
			"group": "build",

			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			]
		},

		{
			"label": "Pack app",
			"group": "build",

			"type": "shell",
			"command": "npx webpack",

			"options": {
				"cwd": "${workspaceFolder}/web/"
			}
		},

		{
			"label": "Run tests",
			"group": "test",

			"type": "shell",
			"command": "npm run test"
		},

		{
			"label": "Build app",
			"group": "build",

			"dependsOn": [
				"Build TS",
				"Pack app",
				"Run tests",
			],
			"dependsOrder": "sequence"
		}
	]
}