{
  "name": "planner",
  "version": "1.0.0",
  "description": "A simple planning and priority management app.",
  "main": "index.js",
  "scripts": {
    "build-app-ts": "tsc --build ./tsconfig.json",
    "pack-app": "cd web && npx webpack && cd ..",
    "build-app": "npm run build-app-ts && npm run pack-app",
    "build-tests-ts": "tsc --build ./tests-tsconfig.json",
    "pack-tests": "cd tests && npx webpack && cd ..",
    "build-tests": "npm run build-tests-ts && npm run pack-tests",
    "build": "npm run build-app && npm run build-tests",
    "test": "karma start ./karma.conf.js --single-run"
  },
  "author": "f3d0rov",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "buffer": "^6.0.3",
    "chai": "^5.1.2",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-cli": "^2.0.0",
    "karma-firefox-launcher": "^2.1.3",
    "karma-mocha": "^2.0.1",
    "mocha": "^11.0.1",
    "process": "^0.11.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  }
}
